  <Button
    android:id="@+id/btnSqlLiteCreateDb"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="SqlLiteCreateDb" />


  <Button
    android:id="@+id/btnSqlLiteInsert"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
