  <Button
    android:id="@+id/btnSqlLiteSelect"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="SqlLiteSelect" />

  <Button
    android:id="@+id/btnSqlLiteUpdate"
    android:layout_width="wrap_content"
